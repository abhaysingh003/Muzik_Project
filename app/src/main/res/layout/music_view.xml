<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_marginBottom="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageMV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:src="@mipmap/music_player_icon"
        app:shapeAppearanceOverlay="@style/curved" />

    <TextView
        android:id="@+id/songNameMV"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/imageMV"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/song_name"
        android:textColor="?colorOnPrimary" />

    <TextView
        android:id="@+id/songAlbumMV"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@id/songNameMV"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/imageMV"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/song_name" />

    <TextView
        android:id="@+id/songDuration"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/songAlbumMV"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/imageMV"
        android:gravity="start"
        android:text="@string/start_tv"
        android:textColor="?colorOnPrimary" />

</RelativeLayout>